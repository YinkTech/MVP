      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3 mt-3">
    <%= form.label :company_name, style: "display: block", class:"form-label"  %>
    <%= form.text_area :company_name, class:"form-control", placeholder:"Full Company Name" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :products_name, style: "display: block", class:"form-label"  %>
    <%= form.text_field :products_name, class:"form-control", placeholder:"Product Name" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :quantity, style: "display: block", class:"form-label"  %>
    <%= form.text_field :quantity, class:"form-control", placeholder:"Enter Excat quatity" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :amount, style: "display: block", class:"form-label"  %>
    <%= form.text_field :amount, class:"form-control", placeholder:"Amount in Naira", value:"â‚¦ " %>
  </div>

  <div class="form-group mb-3">
  <% if group.image.attached? %>
  <%= image_tag group.image, style: "width: 200px; display: block" %>
  <% end %>

  <%= form.label :image, class:"form-label"  %>
  <%= form.file_field :image, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
