<p style="color: green"><%= notice %></p>

<h1>External Transactions</h1>

<div id="externals">

  <table class="table table-hover">
  <thead class="text-center">
    <tr>
      <th scope="col">Time created</th>
      <th scope="col">Company name</th>
      <th scope="col">Products Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Amount</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @externals.each do |external| %>
    <tr class="text-center">
      <th scope="row"><%= external.created_at %></th>
      <td><%= external.company_name %></td>
      <td><%= external.products_name %></td>
      <td> <%= external.quantity %></td>
      <td><%= external.amount %></td>
      <td><%= link_to "Show this Brand", external, class:"btn btn-outline-info" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "New Transactions", new_external_path, class:"btn btn-outline-dark mt-5" %>
